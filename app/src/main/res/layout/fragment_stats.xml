<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="mainViewModel"
            type="com.apollyon.samproject.viewmodels.MainViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.StatsFragment">

    <TextView
        android:id="@+id/distance_text"
        style="@style/style_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tot_time_text"
        style="@style/style_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/distance_text"
        app:layout_constraintTop_toBottomOf="@id/distance_text" />

    <TextView
        android:id="@+id/tot_avg_speed"
        style="@style/style_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/distance_text"
        app:layout_constraintTop_toBottomOf="@id/tot_time_text" />

    <TextView
        android:id="@+id/tot_cal_burned"
        style="@style/style_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/distance_text"
        app:layout_constraintTop_toBottomOf="@id/tot_avg_speed" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>