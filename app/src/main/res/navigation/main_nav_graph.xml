<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"

    app:startDestination="@id/home">
    <fragment
        android:id="@id/home"
        android:name="com.apollyon.samproject.home.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="HomeFragment" />
    <fragment
        android:id="@id/new_session"
        tools:layout="@layout/fragment_new_session"
        android:name="com.apollyon.samproject.newsession.NewSessionFragment"
        android:label="NewSessionFragment" >
        <action
            android:id="@+id/action_new_session_to_runActivity"
            app:destination="@id/runActivity"
            app:launchSingleTop="true"
            app:popUpTo="@id/home" />
    </fragment>
    <fragment
        android:id="@id/profile"
        tools:layout="@layout/fragment_profile"
        android:name="com.apollyon.samproject.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profile_to_authActivity"
            app:destination="@id/authActivity"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@id/trainer"
        tools:layout="@layout/fragment_trainer"
        android:name="com.apollyon.samproject.trainer.TrainerFragment"
        android:label="TrainerFragment" />
    <fragment
        android:id="@id/stats"
        tools:layout="@layout/fragment_stats"
        android:name="com.apollyon.samproject.stats.StatsFragment"
        android:label="StatsFragment" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.apollyon.samproject.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/activity_main"/>
    <activity
        android:id="@+id/authActivity"
        tools:layout="@layout/activity_auth"
        android:name="com.apollyon.samproject.AuthActivity"
        android:label="AuthActivity" />
    <activity
        android:id="@+id/runActivity"
        tools:layout="@layout/activity_run"
        android:name="com.apollyon.samproject.RunActivity"
        android:label="RunActivity" />
</navigation>