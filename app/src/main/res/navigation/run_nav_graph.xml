<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/run_nav_graph"
    app:startDestination="@id/runMapFragment">

    <activity
        android:id="@+id/runActivity"
        tools:layout="@layout/activity_run"
        android:name="com.apollyon.samproject.RunActivity"
        android:label="RunActivity"
        />
    <fragment
        android:id="@+id/runMapFragment"
        tools:layout="@layout/fragment_run_map"
        android:name="com.apollyon.samproject.run.RunMapFragment"
        android:label="RunMapFragment" >
        <action
            android:id="@+id/action_runMapFragment_to_runResultsFragment"
            app:destination="@id/runResultsFragment" />
    </fragment>
    <fragment
        android:id="@+id/runResultsFragment"
        android:name="com.apollyon.samproject.run.RunResultsFragment"
        android:label="RunResultsFragment"
        tools:layout="@layout/fragment_run_results">
        <action
            android:id="@+id/action_runResultsFragment_to_mainActivity2"
            app:destination="@id/mainActivity"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />

        <argument android:name="mapScreenBitmap" app:argType="android.graphics.Bitmap" app:nullable="true" />
        <argument
            android:name="session"
            app:argType="com.apollyon.samproject.datastruct.RunningSession" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        tools:layout="@layout/activity_main"
        android:name="com.apollyon.samproject.MainActivity"
        android:label="MainActivity" >
        <argument
            android:name="session"
            app:argType="com.apollyon.samproject.datastruct.RunningSession" />
    </activity>
</navigation>